class MySQL:
    host: str = "localhost"
    port: int = 3306
    user: str = "root"
    password: str = "password"
    database: str = "rapid_wire"

    @classmethod
    def to_dict(cls) -> dict[str, str|int]:
        return {
            "host": cls.host,
            "port": cls.port,
            "user": cls.user,
            "password": cls.password,
            "database": cls.database,
        }

